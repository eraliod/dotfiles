{
  // ═══════════════════════════════════════════════════════════════════════════
  // EDITOR & WORKBENCH
  // ═══════════════════════════════════════════════════════════════════════════
  "workbench.colorTheme": "One Dark Pro Darker",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.settings.openDefaultSettings": true,
  "workbench.settings.useSplitJSON": false,
  // "workbench.settings.editor": "json",
  "editor.minimap.enabled": false,
  "editor.quickSuggestionsDelay": 600,
  "editor.largeFileOptimizations": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "security.workspace.trust.untrustedFiles": "open",
  "window.zoomLevel": 0,
  "zenMode.centerLayout": false,
  "zenMode.fullScreen": false,
  "zenMode.hideLineNumbers": false,

  // ═══════════════════════════════════════════════════════════════════════════
  // FONTS
  // ═══════════════════════════════════════════════════════════════════════════
  "editor.fontFamily": "SourceCodePro+Powerline+Awesome",
  "editor.fontWeight": "500",
  "editor.fontSize": 14,
  "debug.console.fontFamily": "SourceCodePro+Powerline+Awesome",
  "debug.console.fontSize": 14,
  "terminal.integrated.fontFamily": "Droid Sans Mono Awesome",
  "terminal.integrated.fontWeight": "500",
  "terminal.integrated.fontSize": 14,

  // ═══════════════════════════════════════════════════════════════════════════
  // TERMINAL
  // ═══════════════════════════════════════════════════════════════════════════
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.enableImages": true,
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "/bin/bash"
    },
    "sh": {
      "path": "/bin/sh"
    }
  },
  "terminal.integrated.profiles.osx": {
    "zsh": {
      "path": "/bin/zsh"
    },
    "bash": {
      "path": "/bin/bash"
    }
  },
  "terminal.integrated.profiles.windows": {
    "Command Prompt": {
      "path": "${env:windir}\\System32\\cmd.exe"
    }
  },

  // ═══════════════════════════════════════════════════════════════════════════
  // FILE ASSOCIATIONS
  // ═══════════════════════════════════════════════════════════════════════════
  "files.associations": {
    "CODEOWNERS": "plaintext",
    "*.tm.hcl": "terramate",
    "*.tf.tmgen": "tf"
  },

  // ═══════════════════════════════════════════════════════════════════════════
  // FORMATTING (GENERAL)
  // ═══════════════════════════════════════════════════════════════════════════
  "editor.formatOnSave": false, // enable per language
  "prettier.useTabs": true,
  "diffEditor.ignoreTrimWhitespace": false,
  // The indent color if the number of spaces is not a multiple of "tabSize".
  "indentRainbow.errorColor": "rgba(128,32,32,0.6)",
  // The indent color when there is a mix between spaces and tabs.
  // To be disabled this coloring set this to an empty string.
  "indentRainbow.tabmixColor": "rgba(128,32,96,0.6)",
  "indentRainbow.excludedLanguages": ["plaintext"],
  "indentRainbow.indicatorStyle": "light",
  "indentRainbow.lightIndicatorStyleLineWidth": 2,
  "indentRainbow.colors": [
    "rgba(255,255,64,0.3)",
    "rgba(127,255,127,0.3)",
    "rgba(255,127,255,0.3)",
    "rgba(79,236,236,0.3)"
  ],

  // ═══════════════════════════════════════════════════════════════════════════
  // LANGUAGE-SPECIFIC FORMATTING
  // ═══════════════════════════════════════════════════════════════════════════
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[plaintext]": {
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
    "diffEditor.ignoreTrimWhitespace": true
  },
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },

  // ═══════════════════════════════════════════════════════════════════════════
  // PYTHON
  // ═══════════════════════════════════════════════════════════════════════════
  "python.analysis.extraPaths": ["src"],
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "diffEditor.ignoreTrimWhitespace": true
  },
  "ruff.nativeServer": true,

  // ═══════════════════════════════════════════════════════════════════════════
  // TERRAFORM
  // ═══════════════════════════════════════════════════════════════════════════
  "[terraform]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "[terraform-vars]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "terraform.mcp.server.enable": false,

  // ═══════════════════════════════════════════════════════════════════════════
  // GIT & VERSION CONTROL
  // ═══════════════════════════════════════════════════════════════════════════
  "git.confirmSync": false,
  "git.replaceTagsWhenPull": true,

  // ═══════════════════════════════════════════════════════════════════════════
  // DOCKER
  // ═══════════════════════════════════════════════════════════════════════════
  "docker.extension.enableComposeLanguageServer": false,

  // ═══════════════════════════════════════════════════════════════════════════
  // GITHUB COPILOT
  // ═══════════════════════════════════════════════════════════════════════════
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Use conventional commit format: {type}: {concise subject line summarizing the overall change}"
    },
    {
      "text": "Types: feat (new feature), fix (bug fix), refactor (code restructure), docs (documentation), style (formatting), test (tests), build (build system)"
    },
    {
      "text": "Subject line: present tense, imperative mood, under 72 characters, no period at end"
    },
    {
      "text": "For commits with multiple changes, add a blank line then bulleted list using hyphens"
    },
    {
      "text": "Each bullet: specific change using present tense imperative (e.g., 'Add X feature', 'Remove deprecated Y', 'Update Z configuration')"
    },
    {
      "text": "Focus on what changed and why, not implementation details"
    },
    {
      "text": "Example single-line commit: 'fix: resolve race condition in async task handler'"
    },
    {
      "text": "Example multi-line commit: 'feat: update Claude Code settings with latest features\\n\\n- Replace deprecated includeCoAuthoredBy with attribution config\\n- Add MAX_THINKING_TOKENS for extended reasoning\\n- Enable auto-approval for project MCP servers\\n- Add security deny rules for credential paths'"
    }
  ],
  "github.copilot.chat.pullRequestDescriptionGeneration.instructions": [
    {
      "text": "PR title: Use same conventional commit format as commit messages (e.g., 'feat: add user authentication system')"
    },
    {
      "text": "PR body structure: Start with ## Summary section containing 1-3 bullet points explaining what changed and why"
    },
    {
      "text": "Summary bullets: Focus on business value and impact, not implementation details"
    },
    {
      "text": "After Summary, add ## Test plan section with bulleted checklist of verification steps"
    },
    {
      "text": "Test plan format: Use markdown checkboxes (- [ ]) for manual testing steps"
    },
    {
      "text": "For complex changes, optionally add ## Implementation notes with before/after code examples using markdown code blocks"
    },
    {
      "text": "Keep total PR description concise - most PRs need only Summary and Test plan sections"
    },
    {
      "text": "Example PR body: '## Summary\\n- Updated Claude Code settings to latest version\\n- Added security protections for credential files\\n- Enabled new reasoning features\\n\\n## Test plan\\n- [ ] Verify settings load without errors\\n- [ ] Confirm security rules block credential access\\n- [ ] Test extended thinking on complex tasks'"
    }
  ],
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.advanced": {},
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "github.copilot.editor.enableCodeActions": false,
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.chat.copilotDebugCommand.enabled": false,
  "github.copilot.chat.reviewAgent.enabled": false,
  "github.copilot.chat.reviewSelection.enabled": false,
  "github.copilot.chat.startDebugging.enabled": false,
  "github.copilot.chat.newWorkspaceCreation.enabled": false,
  "github.copilot.chat.setupTests.enabled": false,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,

  // ═══════════════════════════════════════════════════════════════════════════
  // AI TOOLS & MCP
  // ═══════════════════════════════════════════════════════════════════════════
  "chat.mcp.discovery.enabled": {
    "claude-desktop": true,
    "windsurf": true,
    "cursor-global": true,
    "cursor-workspace": true
  },
  "chat.agent.maxRequests": 50,
  "chat.useAgentsMdFile": true,
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",
  "claudeCode.preferredLocation": "panel",
  "claudeCode.useTerminal": true,

  // ═══════════════════════════════════════════════════════════════════════════
  // PRIVACY & TELEMETRY
  // ═══════════════════════════════════════════════════════════════════════════
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false
}
